// Created/Written By Samyak Bumb
{
	"Basic SCSS Boilerplate By Samyak": {
		"prefix": "*",
		"body": [
			"@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');",
			"",
			"*{",
			"\tmargin: 0;",
			"\tpadding: 0;",
			"\tbox-sizing: border-box;",
			"\tfont-family: 'Poppins', sans-serif;",
			"}",
			"body{",
			"\tmin-height: 100vh;",
			"\tcolor: #eee;",
			"\tbackground: #000",
			"}",
			"${1:}",
			"::selection{",
			"\ttext-shadow: none;",
			"\tbackground: #a8cefc;",
			"}"
		]
	},
	"Display: Flex + Center": {
		"prefix": "df",
		"body": [
			"display: flex;",
			"justify-content: center;",
			"align-items: ${1:center};"
		]
	},
	"Display: Grid + Center": {
		"prefix": "dg",
		"body": [
			"display: grid;",
			"place-items: center;"
		]
	},
	"Importing": {
		"prefix": "@im",
		"body": [
			"@import \"${1:}\";",
			"${2:}"
		]
	}
}
